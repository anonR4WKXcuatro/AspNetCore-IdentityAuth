@page
@model WebApp_UnderTheHood.Pages.Account.LoginModel
@{
    Layout = null;
}
<div class="container border" style="padding:20px">

    <form method="POST">

        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Credential.Username"></label>
            </div>

            <div class="col-5">
                <input type="text" class="form-control" asp-for="Credential.Username" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.Username"></span>
        </div>

        <div class="mb-3 row">

            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>

            <div class="col-5">
                <input type="password" class="form-control" asp-for="Credential.Password" />
                <span class="text-danger" asp-validation-for="Credential.Password"></span>
            </div>
           

        </div>

        <div class="mb3-row form-check">
            <div class="col-2">
                <input type="checkbox" class="form-check-input" asp-for="Credential.RememberMe" />
                <label class="form-check-label" asp-for="Credential.RememberMe"></label>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
        </div>

    </form>

</div>
